<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_PATH" value="./logs"/>
    <property name="LOG_FILE" value="${LOG_PATH}/application.log"/>
    <property name="LOG_FILE_AUTH" value="${LOG_PATH}/authorization.log"/>

    <!-- CONSOLE OUTPUT -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] %logger{36} - %msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- FILE OUTPUT - GENERAL APPLICATION LOGS -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- FILE OUTPUT - AUTHORIZATION LOGS (DEDICATED) -->
    <appender name="FILE_AUTHORIZATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_AUTH}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE_AUTH}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ASYNC APPENDER FOR AUTHORIZATION LOGS -->
    <appender name="ASYNC_FILE_AUTHORIZATION" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE_AUTHORIZATION"/>
    </appender>

    <!-- AUTHORIZATION LOGGER - Logs from SecurityConfig role expansion -->
    <logger name="AUTHORIZATION" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_FILE_AUTHORIZATION"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- ACCESS DENIED LOGGER - Logs from GlobalExceptionHandler -->
    <logger name="ACCESS_DENIED" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_FILE_AUTHORIZATION"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- APPLICATION LOGGER -->
    <logger name="com.example.okta_rbac_api" level="INFO"/>

    <!-- SPRING FRAMEWORK LOGGER -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="DEBUG">
        <appender-ref ref="ASYNC_FILE_AUTHORIZATION"/>
    </logger>

    <!-- ROOT LOGGER -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>

